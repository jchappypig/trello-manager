<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Name", :name %></th>
			<th><%= casein_sort_link "Color", :color %></th>
			<th><%= casein_sort_link "Trello identifier", :trello_identifier %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% labels.each do |label| %>
		<tr>
			<td><%= casein_table_cell_link label.name, casein_label_path(label) %></td>
			<td><%= casein_table_cell_link label.color, casein_label_path(label) %></td>
			<td><%= casein_table_cell_link label.trello_identifier, casein_label_path(label) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_label_path(label), :method => :delete, :data => { :confirm => "Are you sure you want to delete this label?" }) %>
			</td>
		</tr>
	<% end %>
</table>