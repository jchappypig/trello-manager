<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Full name", :full_name %></th>
			<th><%= casein_sort_link "Trello identifier", :trello_identifier %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% members.each do |member| %>
		<tr>
			<td><%= casein_table_cell_link member.full_name, casein_member_path(member) %></td>
			<td><%= casein_table_cell_link member.trello_identifier, casein_member_path(member) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_member_path(member), :method => :delete, :data => { :confirm => "Are you sure you want to delete this member?" }) %>
			</td>
		</tr>
	<% end %>
</table>